<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:WeatherApp.ViewModels"
             x:Class="WeatherApp.Views.WeatherView"
             Title="Weather">

    <ContentPage.BindingContext>
        <viewmodels:WeatherViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <Label Text="{Binding City}" 
                   FontSize="28" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />

            <Image Source="{Binding Icon}" 
                   HeightRequest="100" 
                   WidthRequest="100"
                   HorizontalOptions="Center" />

            <Label Text="{Binding Temperature, StringFormat='{0} Â°C'}"
                   FontSize="24"
                   HorizontalOptions="Center" />

            
            <Label Text="{Binding Description}" 
                   FontSize="18"
                   HorizontalOptions="Center" />

            <Button Text="Get Current Location Weather"
                    Command="{Binding CurrentLocationCommand}" 
                    HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
